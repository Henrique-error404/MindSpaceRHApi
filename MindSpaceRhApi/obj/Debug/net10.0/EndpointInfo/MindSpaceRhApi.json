  "components": {
    "schemas": {
      "Department": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "employeeCount": {
            "type": "integer",
            "format": "int32"
          },
          "metrics": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/WellnessMetric"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "WellnessMetric": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "departmentId": {
            "type": "string",
            "format": "uuid"
          },
          "department": {
            "$ref": "#/components/schemas/Department"
          },
          "stressLevelAverage": {
            "type": "number",
            "format": "double"
          },
          "referenceDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
